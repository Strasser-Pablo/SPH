void Boundaries<2>::GetExteriorDirection(vector< physvector<2> >& v)const{
	bool b[4];
	int ipos[4];
	for(int i=0;i<4;i++){
		b[i]=false;
	}
	for(Boundaries<2>::const_iterator it=begin();it!=end();++it){
		int itemp=it->GetMirorID();
		if(!b[itemp]){
	b[itemp]=true;
	ipos[itemp]=distance(begin(),it);
	}
	else{
		b[itemp]=false;
	}
}
v.clear();
for(int i=0;i<4;i++){
		if(b[i]){
			Boundary<2> temp=*(begin()+ipos[i]);
			int xtemp,ytemp;
			temp.Get(xtemp,ytemp);
			physvector<2> pv(double(-xtemp),double(-ytemp));
			v.push_back(pv);
		}
	}
}

